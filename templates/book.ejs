<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title><%= book.title %></title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
      }
      .cover {
        text-align: center;
        margin-top: 100px;
      }
      .cover h1 {
        font-size: 36px;
        margin-bottom: 10px;
      }
      .blank-page {
        page-break-after: always;
      }
      .title-logos {
        text-align: center;
        margin-top: 100px;
      }
      .title-logos h1 {
        font-family: "Times New Roman", serif;
        font-size: 28px;
        margin-bottom: 30px;
      }
      .logos {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 50px;
      }
      .index {
        margin: 50px;
      }
      .index h2 {
        font-size: 24px;
        margin-bottom: 10px;
      }
      .index ul {
        list-style: none;
        padding: 0;
      }
      .index li {
        margin-bottom: 5px;
      }
      .chapter {
        page-break-before: always;
        margin: 50px;
      }
      .chapter h3 {
        font-size: 20px;
        margin-bottom: 10px;
      }
      .chapter p {
        font-size: 12px;
        text-align: justify;
        line-height: 1.5;
      }
    </style>
  </head>
  <body>
    <!-- Portada -->
    <div class="cover">
      <h1><%= book.title.toUpperCase() %></h1>
      <% if (book.subtitle) { %>
      <h3><%= book.subtitle %></h3>
      <% } %>
      <img src="<%= book.cover %>" alt="Portada" width="200" />
    </div>

    <!-- Página en blanco -->
    <div class="blank-page"></div>

    <!-- Título y logos -->
    <div class="title-logos">
      <h1><%= book.title.toUpperCase() %></h1>
      <div class="logos">
        <img
          src="https://your-domain.com/public/logos/logois.jpg"
          alt="Logo1"
          width="100" />
        <img
          src="https://your-domain.com/public/logos/logo2.jpg"
          alt="Logo2"
          width="100" />
      </div>
    </div>

    <!-- Índice -->
    <div class="index">
      <h2>ÍNDICE</h2>
      <ul>
        <% chapters.forEach(function(chap, i) { %>
        <li><%= i + 1 %>. <%= chap.title %> ... <%= chap.page %></li>
        <% }); %>
      </ul>
    </div>

    <!-- Capítulos -->
    <% chapters.forEach(function(chap, i) { %>
    <div class="chapter">
      <h3>Capítulo <%= i + 1 %>: <%= chap.title.toUpperCase() %></h3>
      <p><%= chap.introduction %></p>
      <!-- puedes añadir metodología, objetivos, etc. aquí -->
    </div>
    <% }); %>
  </body>
</html>
